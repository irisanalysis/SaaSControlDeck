# 项目配置
PROJECT_ID=pro1
PROJECT_NAME="AI Data Analysis Platform Pro1"
DEBUG=False
ENVIRONMENT=development

# 服务端口配置 (项目1: 8000-8099)
API_GATEWAY_PORT=8000
DATA_SERVICE_PORT=8001
AI_SERVICE_PORT=8002

# 数据库配置
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/ai_platform_pro1
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_CELERY_DB=1

# AI服务配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Ray集群配置
RAY_HEAD_NODE_HOST=localhost
RAY_HEAD_NODE_PORT=10001
RAY_REDIS_PASSWORD=

# 安全配置
SECRET_KEY=your_super_secret_key_here_change_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# 外部API配置
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourplatform.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# 文件存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=ai-platform-pro1
MINIO_SECURE=False

# 监控配置
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json