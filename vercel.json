{
  "version": 2,
  "framework": "nextjs",
  "functions": {
    "src/app/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_NAME": "SaaS Control Deck",
    "NEXT_PUBLIC_ENVIRONMENT": "vercel"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "SKIP_TYPE_CHECK": "true"
    }
  },
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}