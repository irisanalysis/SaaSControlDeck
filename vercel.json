{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd frontend && npm ci --prefer-offline --no-audit --no-fund && npm run build",
  "outputDirectory": "frontend/.next",
  "installCommand": "npm --version",
  "functions": {
    "frontend/src/app/api/**/*.ts": {
      "runtime": "@vercel/node"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_NAME": "SaaS Control Deck",
    "NEXT_PUBLIC_ENVIRONMENT": "vercel"
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "SKIP_TYPE_CHECK": "true"
    }
  },
  "regions": ["iad1"],
  "cleanUrls": true,
  "trailingSlash": false
}